{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-lg-11 mx-auto">
            <h1>Review index</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Name</th>
                    <th>Stars</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for review in reviews %}
                    <tr>
                        <td>{{ review.id }}</td>
                        <td>{{ review.Description }}</td>
                        <td>{{ review.Name }}</td>
                        <td>{{ review.Stars }}</td>
                        <td>
                            <a href="{{ path('review_show', {'id': review.id}) }}">show</a>
                            <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('review_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
